<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorZed</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="IvSettings">
        <item name="android:layout_width">@dimen/_28sdp</item>
        <item name="android:layout_height">@dimen/_28sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="IvBack">
        <item name="android:layout_width">@dimen/_28sdp</item>
        <item name="android:layout_height">@dimen/_28sdp</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="TvTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Btn">
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn</item>
    </style>

    <style name="ViewParentAcc">
        <item name="android:layout_marginTop">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginLeft">@dimen/_40sdp</item>
        <item name="android:layout_marginRight">@dimen/_40sdp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TvTitleEdt">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="EdtAcc">
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@drawable/bg_btn_corners</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/color_gray</item>
    </style>

    <style name="TvNotifyError">
        <item name="android:textColor">@color/colorZed</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>

    <style name="ItemMenuSetting">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
    </style>

    <style name="TvMenuSetting">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TvDetailMenuSetting">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
    </style>

    <style name="IvSettingContinue">
        <item name="android:layout_height">@dimen/_12sdp</item>
        <item name="android:layout_width">@dimen/_12sdp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>